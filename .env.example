# SDBIP/IDP Management System Configuration
# Copy this file to .env and configure your settings

# Application Settings
APP_NAME="SDBIP & IDP Management System"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000
APP_KEY=

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=sdbip_idp
DB_USERNAME=root
DB_PASSWORD=

# LDAP Configuration
LDAP_ENABLED=true
LDAP_HOST=ldap://your-dc.municipality.gov.za
LDAP_PORT=389
LDAP_BASE_DN=DC=municipality,DC=gov,DC=za
LDAP_BIND_DN=CN=sdbip_service,OU=ServiceAccounts,DC=municipality,DC=gov,DC=za
LDAP_BIND_PASSWORD=
LDAP_USER_FILTER=(sAMAccountName=%s)
LDAP_GROUP_FILTER=(member=%s)

# LDAP Group to Role Mapping
LDAP_GROUP_ADMIN=SDBIP_Admins
LDAP_GROUP_DIRECTOR=SDBIP_Directors
LDAP_GROUP_MANAGER=SDBIP_Managers
LDAP_GROUP_ASSESSOR=SDBIP_Assessors

# OpenAI Configuration (for AI Reports)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# Session Configuration
SESSION_LIFETIME=3600
SESSION_SECURE=false

# File Upload Settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif

# Municipality Information
MUNICIPALITY_NAME="Sample Municipality"
MUNICIPALITY_CODE=DC99
PROVINCE=Gauteng

# Performance Rating Weights
RATING_SELF_WEIGHT=0.20
RATING_MANAGER_WEIGHT=0.40
RATING_INDEPENDENT_WEIGHT=0.40

# POE Settings
POE_RESUBMISSION_DAYS=7
